@page
@model BlogApp.Domain.Models.Post


<h1>Delete Post</h1>

<h3>Tem certeza que deseja deletar?</h3>
<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Conteúdo
        </dt>
        <dd class="col-sm-10">
            @Model.Content
        </dd>
    </dl>

    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Post/Index">Voltar</a>
    </form>
</div>
